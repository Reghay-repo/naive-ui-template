{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    //    "paths": {
    //      "@/*": [
    //        "./*"
    //      ]
    //    },
    "checkJs": true,
    "moduleResolution": "node",
    "allowJs": true,
    "target": "ES2020",
    //    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    //    "skipLibCheck": true,
    /* Bundler mode */
    //  "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    //    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
    //    "jsx": "preserve",
    /* Linting */
    //    "strict": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": true,
    //    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./@package/index.ts",
    "./@package/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
